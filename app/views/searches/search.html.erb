<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <% if @range == 'User' %>
        <h3>Users search for "<%= @content %>"</h3>
        <table class='table table-hover table-inverse'>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '80x80' %></td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <h3>Books search for "<%= @content %>"</h3>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to(book.user) do %>
                  <%= image_tag book.user.get_profile_image, size:'80x80' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>